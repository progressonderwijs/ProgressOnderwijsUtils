<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\NugetPackagesCommon.props" />
  <PropertyGroup>
    <Description>Collection of Roslyn analyzers developed by ProgressOnderwijs</Description>
    <PackageTags>ProgressOnderwijs</PackageTags>
    <PackageReleaseNotes>Added the POU2001 analyzer to detect Maybe&lt;Maybe&lt;TOk, TError, TError&gt;&gt; types.</PackageReleaseNotes>
    <Version>1.3.0</Version>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Common" Version="3.6.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.6.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <!-- It puts the dll in the expected folder of the NuGet package to be recognized as a C# analyzer -->
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

</Project>
