<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Collection of Roslyn analyzers developed by ProgressOnderwijs</Description>
    <PackageTags>ProgressOnderwijs</PackageTags>
    <PackageReleaseNotes>Make robust for no namespaces at all (Aggregate does not work on empty set)</PackageReleaseNotes>
    <Version>1.2.2</Version>
  </PropertyGroup>
  <Import Project="..\NugetPackagesCommon.props" />
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Common" Version="3.5.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.5.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <!-- It puts the dll in the expected folder of the NuGet package to be recognized as a C# analyzer -->
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

</Project>
