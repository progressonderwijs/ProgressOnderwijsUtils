<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\NugetPackagesCommon.props" />
  <PropertyGroup>
    <Description>Collection of Roslyn analyzers developed by ProgressOnderwijs</Description>
    <PackageTags>ProgressOnderwijs</PackageTags>
    <PackageReleaseNotes>Added the POU1010 analyzer to force the IEnumerable&lt;&gt;.AsEnrolledSqlInExpression() for literal arrays.</PackageReleaseNotes>
    <Version>2.1.0</Version>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Common" Version="4.2.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.2.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <!-- It puts the dll in the expected folder of the NuGet package to be recognized as a C# analyzer -->
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

</Project>
