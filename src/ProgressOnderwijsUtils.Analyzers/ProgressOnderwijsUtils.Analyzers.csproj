<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Collection of Roslyn analyzers developed by ProgressOnderwijs</Description>
    <PackageTags>ProgressOnderwijs</PackageTags>
    <PackageReleaseNotes>Place the dll in the correct directory so it can be recognized.</PackageReleaseNotes>
    <Version>1.0.1</Version>
  </PropertyGroup>
  <Import Project="..\NugetPackagesCommon.props" />

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Common" Version="2.10.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="2.10.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <!-- It puts the dll in the expected folder of the NuGet package to be recognized as a C# analyzer -->
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

</Project>
